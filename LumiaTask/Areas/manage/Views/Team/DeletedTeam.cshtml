@using LumiaTask.Helpers
@model PaginatedList<Team>
@{
    int counter = 0;
}
<table class="table">
    <thead>

        <tr>
            <th scope="col">#</th>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Profession</th>
            <th scope="col">Desc</th>
            <th scope="col">IG</th>
            <th scope="col">FB</th>
            <th scope="col">TT</th>
            <th scope="col">LN</th>
            <th scope="col">image</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            counter++;
            <tr>
                <th scope="row">@counter</th>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Profession.Name</td>

                <td>@item.Desc</td>
                <td>@item.IGUrl</td>
                <td>@item.FBUrl</td>
                <td>@item.TTUrl</td>
                <td>@item.LNUrl</td>
                <td>
                    <img style="max-width:100px" src="~/uploads/teams/@item.ImageUrl" class="img-fluid" alt="">
                </td>
                <td>
                    <a asp-action="repair" asp-controller="team" asp-route-id="@item.Id" class="btn btn-success">Repair</a>
                    <a asp-action="delete" asp-controller="team" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>

                </td>
            </tr>

        }
    </tbody>
</table>
<div style="margin-left:500px">
    <form>
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                @if (Model.HasPrevious)
                {
                    <li class="page-item"><a class="page-link" asp-action="index" asp-route-page="@(Model.ActivePage-1)">Previous</a></li>
                }
                @for (int i = 1; i <= Model.TotalPageCount; i++)
                {
                    <li class="page-item @((Model.ActivePage==i)? "active" : "")"><a class="page-link" asp-route-page="@i">@i</a></li>
                }

                @if (Model.HasNext)
                {
                    <li class="page-item"><a class="page-link" asp-action="index" asp-route-page="@(Model.ActivePage+1)">Next</a></li>
                }
            </ul>
        </nav>
    </form>
</div>